using namespace std;
  int scoreply,scorecmp;
  void scoreboard(int p[],int c[],int n){

  		
  		cout<<"ROUND "<<"YOUR SCORE"<<"COMPUTER SCORE"<<endl;
  		  	for(int i=0;i<n;i++){
  		cout<<"   "<<i+1<<"    "<<p[i]<<"   "<<"    "<<c[i]<<"     "<<endl;
  		
  		
  		
	  }
cout<<"\n********GRAND TOTAL************"<<endl;

cout<<"******************************"<<endl;
cout<<"YOUR SCORE     "<<scoreply<<endl;
cout<<"******************************"<<endl;
cout<<"COMPUTER       "<<scorecmp<<endl;
cout<<"******************************"<<endl;
if(scoreply>scorecmp){
	    cout<<"            ******************* \n";
		cout<<"        *******              *******\n";
		cout<<"        *     **            **     *\n";
		cout<<"        *      **          **      *   \n";
		cout<<"        **********        **********   \n";
		cout<<"                   *****              \n";
		cout<<"                    ***                  \n" ;
	    cout<<"                     *                 \n";
	    cout<<"            ********************                    \n";
	    cout<<"YOU WINNED"<<endl;
	
	
}
else if(scoreply<scorecmp){
	cout<<"COMPUTER WINNED THE MATCH BETTER LUCK NEXT TIME "<<endl;
}
else{
	cout<<"\n MATCH TIED ";
}
} 
class roc{
