    int score(){
    
   if((you==1)&&(randomnum==2)||(you==2)&&(randomnum==3)||(you==3)&&(randomnum==1))
        return 1;  
		   
   else if((randomnum==1)&&(you==2)||(randomnum==2)&&(you==3)||(randomnum==3)&&(you==1))
       return 0;
       else return 2;
               }
      
};
int main(){
 roc r1;
  int p[20];
  int c[20];
    int rounds=0, match;
cout<<"*************HOW MANY ROUNDS YOU WANT TO PLAY***********"<<endl;
    cin>>match;
     for(int i=0;i<match;i++){ 
     rounds++;
     
    cout<<"**************ROUND "<<rounds<<"******************"<<endl;
      cout<<"***************************"<<endl;  
      cout<<"*>>>ENTER 1 FOR ROCK<<<<<<*\n"<<endl;  
      cout<<"*>>>ENTER 2 FOR PAPER<<<<<*\n"<<endl;
      cout<<"*>>>ENTER 3 FOR SCISSOR<<<*"<<endl;
      cout<<"***************************"<<endl;
    r1.Yourenterednumber();
    cout<<"PRESS ENTER TO CLEARSREEN"<<endl;
    getch();
    system("cls");
    r1.compnumber();
    r1.obj();
      
      if(r1.score()==0){
	  scoreply++;
	  p[i]=1;c[i]=0;
	  cout<<scoreply<<" POINT"<<endl;}
      else if(r1.score()==1){
      scorecmp++;
      c[i]=1;p[i]=0;}
      else{
      	c[i]=0;p[i]=0;
	  }
 
  cout<<"PRESS ENTER TO CLEARSREEN"<<endl;
    getch();
      system("cls");
	  
     }
    scoreboard(p,c,match);
    return 0;
    
}
